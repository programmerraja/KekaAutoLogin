{
  "manifest_version": 3,
  "name": "KekaBuddy",
  "version": "1.1",
  "description": "Automatically manage your Keka clock-ins and clock-outs with precision, ensuring you're always on time without the hassle.",
  "permissions": [
    "storage",
    "tabs",
    "cookies",
    "debugger",
    "webNavigation",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "*://*.keka.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.keka.com/*"],
      "js": ["./keka.js"]
    }
  ]
}
